          "anim_name": "aim_down"
        },
        "node_aim_neutral": {
          "type": "bind_pose"
        },
        "node_aim_up": {
          "type": "playback",
          "anim_name": "aim_up"
        },
        "child": {
          "type": "sequence",
          "entries": [
            {
              "type": "item",
              "name": "idle",
              "node": {
                "type": "playback",
                "anim_name": "idle",
                "looping": true,
                "events": []
              },
              "transitions": [
                {
                  "transition_forward": {
                    "func": "is_moving",
                    "target": "walking",
                    "duration": 0.2
                  },
                  "transition_reverse": {
                    "func": "is_moving",
                    "target": "walking",
                    "duration": 0.2
                  }
                },
                {
                  "transition_forward": {
                    "func": "is_firing",
                    "target": "firing",
                    "duration": 0.0
                  },
                  "transition_reverse": {
                    "func": "is_firing",
                    "target": "firing",
                    "duration": 0.0
                  }
                }
              ],
              "reset": "playback_reset"
            },
            {
              "type": "item",
              "name": "walking",
              "scale_to_move_speed": true,
              "node": {
                "type": "playback",
                "anim_name": "walk",
                "looping": true,
                "events": []
              },
              "transitions": [
                {
                  "transition_forward": {
                    "func": "not_moving",
                    "target": "walk_stop",
                    "duration": 0.3
                  },
                  "transition_reverse": {
                    "func": "not_moving",
                    "target": "walk_stop",
                    "duration": 0.3
                  }
                },
                {
                  "transition_forward": {
                    "func": "is_firing",
                    "target": "firing",
                    "duration": 0.0
                  },
                  "transition_reverse": {
                    "func": "is_firing",
                    "target": "firing",
                    "duration": 0.0
                  }
                }
              ],
              "reset": "playback_reset"
            },
            {
              "type": "item",
              "name": "walk_stop",
              "node": {
                "type": "playback",
                "anim_name": "walk_stop",
                "looping": false,
                "events": []
              },
              "transitions": [
                {
                  "transition_forward": {
                    "func": "anim_complete",
                    "target": "idle",
                    "duration": 0.0
                  },
                  "transition_reverse": {
                    "func": "anim_complete",
                    "target": "idle",
                    "duration": 0.0
                  }
                },
                {
                  "transition_forward": {
                    "func": "is_firing",
                    "target": "firing",
                    "duration": 0.0
                  },
                  "transition_reverse": {
                    "func": "is_firing",
                    "target": "firing",
                    "duration": 0.0
                  }
                }
              ],
              "reset": "playback_reset"
            },
            {
              "type": "item",
              "name": "firing",
              "node": {
                "type": "playback",
                "anim_name": "firing",
                "looping": false,
                "events": [
                  {
                    "time": 0.0,
                    "type": "effect",
                    "parameters": {
                      "spec": "/pa/units/medieval/infantry/mage/lightning_muzzle.pfx",
                      "bone": "muzzle_staff",
                      "attached": true
                    }
                  },
                  {
                    "time": 0.0,
                    "type": "audio",
                    "parameters": {
                      "cue": "/SE/Weapons/air/titan_air_fire"
                    }
                  }
                ]
              },
              "transitions": [
                {
                  "transition_forward": {
                    "func": "anim_complete",
                    "target": "idle",
                    "duration": 0.0
                  },
                  "transition_reverse": {
                    "func": "anim_complete",
                    "target": "idle",
                    "duration": 0.0
                  }
                }
              ],
              "reset": "playback_reset"
            }
          ]
        }
      },
      "dead": {
        "type": "bind_pose"
      },
      "ghost": {
        "type": "bind_pose"
      }
